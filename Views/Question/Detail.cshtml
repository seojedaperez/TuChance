@model IEnumerable<TuChanceTest_ASP.Net_Core_3_1.Models.SurveyQuestion>

@{
    ViewData["Title"] = "Question List";
}
<h1>@ViewData["Title"]</h1>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdSurvey)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdQuestion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Question)
                                </th>
                                <th>

                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.IdSurvey
                                    </td>
                                    <td>
                                        @item.IdQuestion
                                    </td>
                                    <td>
                                        @item.Question
                                    </td>
                                    <td class="flex-column">
                                        <a asp-controller="Question" asp-action="Edit" asp-route-id="@item.IdQuestion" class="btn btn-success">Edit</a>
                                    </td>
                                    <td>
                                        <form asp-action="Delete" asp-route-id="@item.IdQuestion">
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <button class="btn btn-primary w-100" onclick="location.href='@Url.Action("Create", "Question")'">Create New</button>
                </div>
                @if (TempData["errorMessage"] != null)
                {
                    <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
                        @TempData["errorMessage"]
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>